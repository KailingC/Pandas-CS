import glob
path =r'/.../data' # use your path
allFiles = glob.glob(path + "/*/*/common_file_name.csv")#the use of *!

frame = pd.DataFrame()
list_ = []
for file_ in allFiles:
    df = pd.read_csv(file_,index_col = ['H_ACT_ID'])
    list_.append(df)
frame = pd.concat(list_)#concat!


